
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widget_now_playing_relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/widget_shape"
        android:gravity="center_vertical"
        android:padding="4dp" >

        <LinearLayout
            android:id="@+id/widget_now_playing_linear_layout_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:gravity="center_horizontal" >

            <ImageButton
                android:id="@+id/widget_now_playing_button_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_prev" />

            <ImageButton
                android:id="@+id/widget_now_playing_button_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_stop" />

            <ImageButton
                android:id="@+id/widget_now_playing_button_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_play" />

            <ImageButton
                android:id="@+id/widget_now_playing_button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_next" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/widget_now_playing_linear_layout_buttons"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/widget_now_playing_open_music_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_empty"
                android:text="@string/music"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/widget_now_playing_open_movie_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_empty"
                android:text="@string/movies"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/widget_now_playing_open_tv_shows_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/button_empty"
                android:text="@string/tv_shows"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/linearLayout1"
            android:layout_alignParentRight="true"
            android:background="@drawable/widget_info_area" 
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/widget_now_playing_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:text="Artist"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/widget_now_playing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"                
                android:layout_below="@+id/widget_now_playing_artist"
                android:text="Title"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/widget_now_playing_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                
                android:layout_below="@+id/widget_now_playing_title"
                android:textColor="@android:color/white"
                android:text="Song"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/widget_now_playing_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/widget_now_playing_song"
                android:textColor="@android:color/white"                
                android:text="Duration"
                android:textSize="12dp" />

        </RelativeLayout>

    </RelativeLayout>
